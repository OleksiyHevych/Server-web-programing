@model Lab1.Models.MovieActor

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>MovieActor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Movie)</dt>
        <dd class="col-sm-10">
            <a asp-controller="Movies" asp-action="Details" asp-route-id="@Model.MovieId">
                @Model.Movie.Title
            </a>
        </dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Actor)</dt>
        <dd class="col-sm-10">
            <a asp-controller="Actors" asp-action="Details" asp-route-id="@Model.ActorId">
                @Model.Actor.FirstName @Model.Actor.LastName
            </a>
        </dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.RoleName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.RoleName)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.BillingOrder)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.BillingOrder)</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
