@model Lab1.ViewModels.MovieEditViewModel

@{
    ViewData["Title"] = "Edit Movie";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">✏️ Edit Movie</h1>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="card shadow-sm p-4">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-bold"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Genre" class="form-label fw-bold"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ReleaseDate" class="form-label fw-bold"></label>
                <input asp-for="ReleaseDate" type="date" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DurationMinutes" class="form-label fw-bold"></label>
                <input asp-for="DurationMinutes" type="number" class="form-control" />
                <span asp-validation-for="DurationMinutes" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-bold"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Вибір акторів -->
            <div class="mb-3">
                <label class="form-label fw-bold">Select Actors:</label>
                <div class="d-flex flex-wrap gap-2">
                    @foreach (var actor in Model.AllActors)
                    {
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox"
                                   name="SelectedActorIds"
                                   value="@actor.Value"
                                   id="actor_@actor.Value"
                                   @(Model.SelectedActorIds != null && Model.SelectedActorIds.Contains(int.Parse(actor.Value)) ? "checked" : "") />
                            <label class="form-check-label" for="actor_@actor.Value">@actor.Text</label>
                        </div>
                    }
                </div>
            </div>

            <div class="text-end mt-4">
                <button type="submit" name="saveType" value="save" class="btn btn-primary px-4">
                    <i class="bi bi-save"></i> Зберегти в базу
                </button>

                <button type="submit" name="saveType" value="draft" class="btn btn-warning px-4">
                    💾 Зберегти чернетку
                </button>

                <a asp-action="LoadDraft" asp-route-id="@Model.Id" class="btn btn-info px-4">
                    📄 Завантажити чернетку
                </a>

                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </div>

        </div>
    </form>

    @if (TempData["DraftSaved"] != null)
    {
        <div class="alert alert-warning mt-3">@TempData["DraftSaved"]</div>
    }
    @if (TempData["DraftLoaded"] != null)
    {
        <div class="alert alert-info mt-3">@TempData["DraftLoaded"]</div>
    }
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
