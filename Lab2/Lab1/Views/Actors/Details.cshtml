@model Lab1.Models.Actor

@{
    ViewData["Title"] = "Actor Details";
}

<h1>Actor Details</h1>

<div>
    <h4>Actor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(a => a.FirstName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(a => a.FirstName)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(a => a.LastName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(a => a.LastName)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(a => a.BirthDate)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(a => a.BirthDate)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(a => a.Country)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(a => a.Country)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(a => a.Biography)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(a => a.Biography)</dd>
    </dl>

    <h4>Movies</h4>
    @if (Model.MovieActors != null && Model.MovieActors.Any())
    {
        <ul>
            @foreach (var movie in Model.MovieActors.Select(ma => ma.Movie))
            {
                <li>
                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id">
                        @movie.Title
                    </a>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No movies assigned.</p>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
